<section class="pagination">
    <!-- If we only have the query parameters it gets upended to the current url -->
    <% if(currentPage!==1 && previousPage!==1) {%>
        <a class="bn5" href="?page=1">1</a>
    <% } %>  
    <% if(hasPreviousPage) {%> 
        <a class="bn5" href="?page=<%= previousPage %>"><%= previousPage %> </a>
    <% } %> 
    <a class="active bn5" href="/?page=<%= currentPage %>"><%= currentPage %> </a>
    <% if(hasNextPage) {%> 
        <a class="bn5" href="?page=<%= nextPage %>"><%= nextPage %> </a>
    <% } %> 
    <% if(lastPage!==currentPage&&nextPage!==lastPage) {%>
        <a class="bn5" href="?page=<%= lastPage %>"><%= lastPage %> </a>
    <% } %>  
</section>